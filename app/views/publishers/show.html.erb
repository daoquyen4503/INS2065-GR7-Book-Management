<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Publisher</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to publishers_path, class: button_class(theme: "transparent") do %>
      All Publishers
      <% end %>
      <%= link_to edit_publisher_path(@publisher), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @publisher.name %></p>
      </li>
      <li>
        <p class="font-semibold">Address:</p>
        <p><%= @publisher.address %></p>
      </li>
      <li>
        <p class="font-semibold">Email:</p>
        <p><%= @publisher.email %></p>
      </li>
      <li>
        <p class="font-semibold">Hotline:</p>
        <p><%= @publisher.hotline %></p>
      </li>
  </ul>
</div>
